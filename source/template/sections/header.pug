header.header
	.header__top
		.container
			.contacts
				a.contact(href="#")
					i.fa.fa-mobile.contact__icon(aria-hidden="true")
					span.contact__text 9999 9999

				a.contact(href="#")
					i.fa.fa-envelope.contact__icon.contact__icon--email(arial-hidden="true")
					span.contact__text info@business.co

				a.contact.facebook-icon(href="#")
					i.fa.fa-facebook(arial-hidden="true")
	.container
		.header__bottom
			.logo: img.logo__picture(src="images/logo.png" alt="picture")
			nav.nav
				- var items = [ 'Home', 'About us', 'Our Approach', 'Our Work']
				- var dataItems = ['header', 'about', 'approach', 'work']
				each item, key in items
					if item === 'Home'
						a.nav__link.nav__link--active(href="#" data-link=dataItems[key])= item
					else
						a.nav__link(href="#" data-link=dataItems[key])= item
			a.button.header__button.button--red(href="#") Free Consultation

